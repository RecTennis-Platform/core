generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/@internal/prisma_auth/client"
}

datasource db {
  provider = "postgresql"
  url      = env("AUTH_DATABASE_URL")
}

model users {
  id             Int      @id @default(autoincrement())
  email          String   @unique
  password       String?
  name           String
  image          String?
  refresh_token  String?
  reset_password Boolean  @default(false)
  role           UserRole @default(user)
}

enum UserRole {
  admin
  user
}
